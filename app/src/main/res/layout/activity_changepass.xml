<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbx_logo_login"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:soundEffectsEnabled="true"
                app:srcCompat="@drawable/woope_blue" />

            <TextView
                android:id="@+id/txt_countdown_changepass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_verifphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="کد تایید و رمز عبور جدید را وارد کنید"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/sms_validation_changepass_layout"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textPrimary"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/txtbx_confirm_code_changepass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:hint="کد تایید"
                android:inputType="textPersonName"
                android:maxLength="6"
                android:textColor="@color/white"
                android:textColorHint="@color/textPrimary"
                android:textDirection="rtl"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newpass_changepass_layout"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textPrimary"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/txtbx_newpass_changepass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:ems="10"
                android:hint="رمز عبور جدید"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/textPrimary"
                android:textDirection="rtl"
                android:textSize="18sp" />

        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/btn_save_changepass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_border"
            android:text="@string/save"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progressBar_changepass"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:indeterminateDrawable="@drawable/progress_white"
        android:visibility="gone"
        tools:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>