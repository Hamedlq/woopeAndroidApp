            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:id="@+id/storeNameLayout_product_home_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="10dp"
                android:visibility="visible">
            <TextView
                android:id="@+id/store_name_product_home_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/weekDay_layout_offer_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/weekDay_offer_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/store_discount_layout_special_offer_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/store_discount_special_offer_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textDirection="rtl"/>
            </android.support.v7.widget.CardView>

