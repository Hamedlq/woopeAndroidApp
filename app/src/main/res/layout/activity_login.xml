<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbx_logo_login"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:soundEffectsEnabled="true"
                app:srcCompat="@drawable/woope_blue" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/usernamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textPrimary"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/txtbx_userphone_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:drawableRight="@drawable/round_perm_identity_24"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="نام کاربری/شماره موبایل"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textPrimary"
                    android:textDirection="rtl"
                    android:textSize="18sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/textPrimary"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">


                <EditText
                    android:id="@+id/txtbx_password_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:drawableRight="@drawable/round_lock_24"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="رمز عبور"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textPrimary"
                    android:textDirection="rtl"
                    android:textSize="18sp"/>

            </android.support.design.widget.TextInputLayout>
            <ProgressBar
                android:id="@+id/enter_progressbar_login"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:indeterminateDrawable="@drawable/progress_white"
                android:visibility="gone"
                tools:visibility="gone" />
            <Button
                android:id="@+id/btn_enter_login"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_border"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="@string/login"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/txt_forget_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/forgetـpassword"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/txt_noaccount"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="40dp"
                android:text="حساب کاربری ندارید؟"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_register"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:padding="10dp"
                android:text="@string/register"/>




        </LinearLayout>

    </ScrollView>
</RelativeLayout>