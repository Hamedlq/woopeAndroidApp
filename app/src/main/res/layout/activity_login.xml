<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_animlist"
    android:id="@+id/activity_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/login_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"
                android:background="@color/transparent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:text="ورود" />

            </android.support.v7.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgbx_logo_login"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:soundEffectsEnabled="true"
                    app:srcCompat="@drawable/logo_white" />


                <EditText
                    android:id="@+id/txtbx_userphone_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/phonenumber_background"
                    android:gravity="center"
                    android:hint="شماره موبایل"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textPrimary"
                    android:textSize="11sp" />


                <EditText
                    android:id="@+id/txtbx_password_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/group1777"
                    android:gravity="center"
                    android:hint="رمز عبور"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textPrimary"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txt_forget_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/underline"
                    android:includeFontPadding="true"
                    android:paddingBottom="20dp"
                    android:text="@string/forget_password"
                    android:textColor="@color/textPrimary"
                    android:textSize="12sp"
                    android:textStyle="" />


                <ProgressBar
                    android:id="@+id/enter_progressbar_login"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:indeterminateDrawable="@drawable/progress_white"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/progressBar_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:visibility="gone"
                    app:indicatorColor="#59CC89"
                    app:indicatorName="BallPulseIndicator" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/btn_enter_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/group1785"
                    app:mrl_rippleRoundedCorners="50dp"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleOverlay="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </com.balysv.materialripple.MaterialRippleLayout>

                <!--<Button-->
                <!--android:id="@+id/btn_enter_login"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:background="@drawable/group1785"-->
                <!--android:text="@string/login"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="14sp" />-->


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>