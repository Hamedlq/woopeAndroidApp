    <LinearLayout
        android:id="@+id/filters_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="3dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/search"
                android:drawableLeft="@drawable/search"
                android:hint="جستجو..."
                android:textColor="@color/black" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/filterbuttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/zoneButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/arrow_drop_down"
                android:text="@string/chooseZone"
                android:textColor="@color/colorPrimary"
                android:textDirection="rtl"
                android:theme="@style/whiteButton" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/categoryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/arrow_drop_down"
                android:text="@string/chooseCategory"
                android:textColor="@color/colorPrimary"
                android:theme="@style/whiteButton" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/zoneCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/zoneRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layoutDirection="rtl" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zoneRecycler"
                        android:gravity="center_vertical"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            app:cardElevation="5dp">

                            <EditText
                                android:id="@+id/zoneSearchEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="@color/white"
                                android:drawableLeft="@drawable/search"
                                android:hint="جستجوی محله ..."
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <!--<android.support.v7.widget.SearchView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layoutDirection="ltr"-->
                            <!--app:queryHint="جستجوی محله ..."-->
                            <!--app:defaultQueryHint="جستجوی محله ..."/>-->

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/acceptZoneCardBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_border_black"
                            android:padding="-2dp"
                            android:text="@string/accept"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/categoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:animateLayoutChanges="true"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/categoryRecyclerSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sortRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filters_layout"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:elevation="1dp"/>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filters_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layoutDirection="rtl" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressDrawable="@drawable/circular_progress_bar" />


    </RelativeLayout>

