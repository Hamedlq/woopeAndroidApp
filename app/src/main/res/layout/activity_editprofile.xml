<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c6bc0">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:elevation="@dimen/default_elevation"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_woop" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phonenumberlayout_editprofile"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkwhite"
        android:textColorHint="@color/edittext_hint"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realradiogroup_gender_editprofile">

        <EditText
            android:id="@+id/txtbx_phonenumber_editprofile"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="شماره موبایل"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/edittext_hint"
            android:textDirection="ltr"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <!--<android.support.constraint.ConstraintLayout-->
        <!--android:id="@+id/namefamilylayout_editprofile"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="4dp"-->
        <!--android:padding="0dp"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/usernamelayout">-->

    <android.support.design.widget.TextInputLayout
        android:id="@+id/familylayout_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="40dp"
        android:layout_toLeftOf="@+id/namelayout_editprofile"
        android:layout_toStartOf="@+id/namelayout_editprofile"
        android:gravity="center_horizontal"
        android:textColor="@color/darkwhite"
        android:textColorHint="@color/edittext_hint"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintEnd_toStartOf="@+id/namelayout_editprofile"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <EditText
            android:id="@+id/txtbx_family_editprofile"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="نام خانوادگی"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/edittext_hint"
            android:textDirection="ltr"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/namelayout_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkwhite"
        android:textColorHint="@color/edittext_hint"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/phonenumberlayout_editprofile"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <EditText
            android:id="@+id/txtbx_name_editprofile"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="نام"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/edittext_hint"
            android:textDirection="ltr"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/emaillayout_editprofile"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkwhite"
        android:textColorHint="@color/edittext_hint"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonenumberlayout_editprofile">

        <EditText
            android:id="@+id/txtbx_email_editprofile"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="ایمیل"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/edittext_hint"
            android:textDirection="ltr"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/realradiogroup_gender_editprofile"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/namelayout_editprofile"
        app:layout_constraintTop_toBottomOf="@+id/txt_gender"
        app:rrbg_animateDrawables_enter="bounce"
        app:rrbg_animateDrawables_scale="1.1"
        app:rrbg_animateTexts_enter="bounce"
        app:rrbg_backgroundColor="#00000000"
        app:rrbg_borderColor="@color/white"
        app:rrbg_dividerColor="@color/white"
        app:rrbg_dividerSize="1dp"
        app:rrbg_radius="2dp"
        app:rrbg_selectorColor="?attr/colorPrimary"
        app:rrbg_selectorSize="6dp">

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/realradiobutton_male_editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/user_male"
            app:rrb_drawableHeight="28dp"
            app:rrb_drawablePadding="8dp"
            app:rrb_drawableWidth="28dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black"
            app:rrb_text="آقا"
            app:rrb_textColor="@color/white" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/realradiobutton_female_editprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_drawable="@drawable/user_female"
            app:rrb_drawableGravity="right"
            app:rrb_drawableHeight="28dp"
            app:rrb_drawablePadding="8dp"
            app:rrb_drawableWidth="28dp"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@color/black"
            app:rrb_text="خانم"
            app:rrb_textColor="@color/white" />
    </co.ceryle.radiorealbutton.RadioRealButtonGroup>

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginTop="6dp"
        android:text="جنسیت"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/namelayout_editprofile"
        app:layout_constraintTop_toBottomOf="@+id/familylayout_editprofile" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/userbiolayout_editprofile"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkwhite"
        android:textColorHint="@color/edittext_hint"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emaillayout_editprofile">

        <EditText
            android:id="@+id/txtbx_userbio_editprofile"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="درباره شما"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:maxLines="2"
            android:textColorHint="@color/edittext_hint"
            android:textDirection="ltr"
            android:textSize="14sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/agelayout_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:gravity="center_horizontal"
        android:textColor="@color/darkwhite"
        android:textColorHint="@color/edittext_hint"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
        app:layout_constraintStart_toStartOf="@+id/familylayout_editprofile"
        app:layout_constraintTop_toBottomOf="@+id/txt_gender">

        <EditText
            android:id="@+id/txtbx_age_editprofile"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="سن"
            android:inputType="textPersonName"
            android:maxLength="2"
            android:textColor="@color/white"
            android:textColorHint="@color/edittext_hint"
            android:textDirection="ltr"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/realradiogroup_gender_editprofile" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_send_editprofile"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_border"
        android:text="ثبت"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_editprofile"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>