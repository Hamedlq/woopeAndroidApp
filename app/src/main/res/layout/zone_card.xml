<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zoneCardItem"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/zoneCheckItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            app:color_checked="@color/colorPrimary"
            app:color_tick="@color/white"
            app:color_unchecked_stroke="@color/colorPrimary"
            app:small_tick="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:id="@+id/zoneNameItem"/>

    </LinearLayout>

</android.support.v7.widget.CardView>