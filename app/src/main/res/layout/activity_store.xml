                                    <!--android:layout_gravity="center"-->
                                    <!--android:text=""-->
                                    <!--android:textColor="@color/colorPrimaryDark"-->
                                    <!--android:textSize="12sp"-->
                                    <!--ma/>-->

                                <TextView
                                    android:id="@+id/store_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <com.varunest.sparkbutton.SparkButton
                            android:id="@+id/bookmark_storeActivity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:sparkbutton_activeImage="@drawable/bookmarked"
                            app:sparkbutton_inActiveImage="@drawable/notbookmarked2"
                            app:sparkbutton_iconSize="30dp"
                            app:sparkbutton_primaryColor="@color/colorPrimary"
                            app:sparkbutton_secondaryColor="@color/alizarin"
                            android:layout_marginLeft="50dp"
                            app:layout_constraintLeft_toRightOf="@id/store_layout"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                    </android.support.constraint.ConstraintLayout>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <!--<TextView-->
                        <!--android:id="@+id/store_name"-->
