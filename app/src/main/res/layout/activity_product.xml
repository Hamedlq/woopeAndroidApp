                                <com.jsibbold.zoomage.ZoomageView
                                    android:id="@+id/productImage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:zoomage_restrictBounds="true"
                                    app:zoomage_animateOnReset="true"
                                    app:zoomage_autoResetMode="ALWAYS"
                                    app:zoomage_zoomable="true"
                                    app:zoomage_translatable="true"
                                    app:zoomage_doubleTapToZoom="false"
                                    app:zoomage_minScale="0.6"
                                    app:zoomage_maxScale="8"
                                    android:background="@color/colorPrimary" />

                                <com.wang.avi.AVLoadingIndicatorView
                                    android:id="@+id/loading_product"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:visibility="visible"
                                    app:indicatorColor="#59CC89"
                                    app:indicatorName="BallPulseIndicator" />

                            </RelativeLayout>

                        </ir.woope.woopeapp.Utils.SquareLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sqPI"
                            android:layout_marginTop="-25dp"
                            android:background="@drawable/store_hover" />

                    </RelativeLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/product_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:layoutDirection="rtl"
                        app:layout_collapseMode="pin"
                        app:layout_scrollFlags="scroll|enterAlways">



                    </android.support.v7.widget.Toolbar>

                </android.support.design.widget.CollapsingToolbarLayout>

